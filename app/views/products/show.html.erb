<div class="div container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <% if @action == 'created' || @action == 'updated'%>
            <h2 class="text-center">The product has been <%= @action %> successfully!</h2>
          <% else %>
            <h2 class="text-center">The product information is:</h2>
          <% end %>
        </div>
          <p><strong>Name:</strong> <%= @product.name %></p>
          <p><strong>Reference:</strong> <%= @product.reference %></p>
          <p><strong>Price:</strong> <%= @product.price %></p>
          <p><strong>Quantity:</strong> <%= @product.quantity %></p>
          <p><strong>Brand:</strong> <%= @product.brand %></p>
          <p><strong>Category:</strong> <%= @product.category_id %></p>
          <p><strong>Description:</strong> <%= @product.description %></p>
          <p><strong>Created At:</strong> <%= @product.created_at %></p>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
        <%= link_to 'New Product', new_product_path, class:'btn btn-primary' %> -
        <%= link_to 'All Products', products_path , class:'btn btn-warning' %>
    </div>
  </div>
</div>
