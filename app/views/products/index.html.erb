<div class="div container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><h2 class="text-center">List of Products</h2></div>
          <table class="table table-hover">
            <thead>
              <th>Name</th>
              <th>Reference</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Brand</th>
              <th>Description</th>
              <th>Category</th>
              <th>Created At</th>
              <th>Options</th>
            </thead>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= product.name %></td>
                  <td><%= product.reference %></td>
                  <td><%= product.price %></td>
                  <td><%= product.quantity %></td>
                  <td><%= product.brand %></td>
                  <td><%= product.description %></td>
                  <td><%= product.category.name %></td>
                  <td><%= product.created_at %></td>
                  <td>
                    <%= link_to 'View', product, class:'btn btn-primary' %>
                    <%= link_to 'Edit', edit_product_path(product), class:'btn btn-success' %>
                    <%= link_to 'Remove', product, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure to delete this product?' }  %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to 'New Product', new_product_path, class:'btn btn-primary'  %>
    </div>
  </div>
</div>
