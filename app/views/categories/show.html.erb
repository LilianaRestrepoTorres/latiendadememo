<div class="div container">
  <div class="col-md-6 col-md-offset-3">

    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <% if @action == 'created' || @action == 'updated'%>
          <h2 class="text-center">The category has been <%= @action %> successfully!</h2>
          <% else %>
          <h2 class="text-center">The category information is:</h2>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <p><strong>Id:</strong> <%= @category.id %></p>
      <p><strong>Name:</strong> <%= @category.name %></p>
      <p><strong>Description:</strong> <%= @category.description %></p>
      <p><strong>Created At:</strong> <%= @category.created_at %></p>
    </div>

    <div class="row">
      <%= link_to 'New Category', new_category_path, class:'btn btn-primary' %>
      <%= link_to 'All Categories', categories_path , class:'btn btn-warning' %>
    </div>

  </div>
</div>
